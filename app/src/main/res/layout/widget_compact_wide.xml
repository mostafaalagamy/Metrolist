<?xml version="1.0" encoding="utf-8"?>
<!-- Compact 4x1 Widget - Single row with album art, song info, like and play buttons -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/widget_background"
    android:paddingStart="12dp"
    android:paddingEnd="12dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:gravity="center_vertical"
    android:theme="@style/Theme.Widget.Metrolist">

    <!-- Album Art - Square -->
    <ImageView
        android:id="@+id/widget_wide_album_art"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"
        android:contentDescription="@string/album_art" />

    <!-- Song Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/widget_wide_song_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/not_playing"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/widget_text_primary"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/widget_wide_artist_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tap_to_play"
            android:textSize="12sp"
            android:textColor="@color/widget_text_secondary"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="2dp" />
    </LinearLayout>

    <!-- Like Button -->
    <FrameLayout
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/widget_like_button_bg">

        <ImageButton
            android:id="@+id/widget_wide_like_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_widget_heart_outline_nav"
            android:contentDescription="@string/like" />
    </FrameLayout>

    <!-- Play Button -->
    <FrameLayout
        android:id="@+id/widget_wide_play_container"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:background="@drawable/widget_play_button_circular">

        <ImageView
            android:id="@+id/widget_wide_play_pause"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_widget_play_low"
            android:contentDescription="@string/play_pause" />
    </FrameLayout>

</LinearLayout>
